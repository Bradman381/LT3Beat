<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" tools:deviceIds="wear_round"
    android:background="@drawable/background">

    <TextView android:text="11" android:layout_width="wrap_content"
        android:id="@+id/heartbeat"
        android:layout_height="wrap_content"
        android:textColor="#C74F9D"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal|top"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Song"
        android:id="@+id/songBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:backgroundTint="#C74F9D" />
</FrameLayout>
